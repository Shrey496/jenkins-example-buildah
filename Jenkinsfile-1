pipeline {
  agent {
    kubernetes {
      yaml '''
apiVersion: v1
kind: Pod
metadata:
  name: buildah
spec:
  containers:
  - name: buildah
    image: quay.io/buildah/stable:v1.23.1
    command:
    - cat
    tty: true
    securityContext:
      # OpenShift does not allow privileged containers by default.
      # Avoid privileged mode if possible or use a different SCC.
      runAsUser: 1000  # Use a non-root user that OpenShift allows.
      allowPrivilegeEscalation: false  # Ensure no privilege escalation is allowed.
    volumeMounts:
      - name: varlibcontainers
        mountPath: /var/lib/containers
  volumes:
    - name: varlibcontainers
      # You might need to adjust this to OpenShift's persistent volume or use emptyDir.
      emptyDir: {}
  serviceAccountName: jenkins  # Ensure your Jenkins service account has appropriate privileges.
'''   
    }
  }
  options {
    buildDiscarder(logRotator(numToKeepStr: '3'))
    durabilityHint('PERFORMANCE_OPTIMIZED')
    disableConcurrentBuilds()
  }
  stages {
    stage('Build with Buildah') {
      steps {
        container('buildah') {
          sh 'buildah build -t darinpope/jenkins-example-buildah:8.5-230 .'
        }
      }
    }
  }
}
